{
  "name": "fiddich",
  "version": "0.17.0",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "Masanori Onoue <ugaya40@hotmail.com> (https://github.com/ugaya40)",
  "license": "MIT",
  "private": false,
  "description": "State management library for React.",
  "keywords": [
    "react",
    "state-management"
  ],
  "repository": "git://github.com/ugaya40/fiddich.git",
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --reporter=verbose",
    "test:new": "vitest run test-new --reporter=verbose",
    "test:all": "vitest run test test-new --reporter=verbose",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "lint": "biome check ./src ./test",
    "lint:fix": "biome check --write ./src ./test",
    "format": "biome format --write ./src ./test",
    "check": "biome check ./src ./test && npm run type-check"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/ui": "^1.0.0",
    "jsdom": "^26.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^1.0.0"
  }
}
